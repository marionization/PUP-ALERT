<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seriousmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SeriousMode">

        <activity
            android:name="Activity.SubmitReportActivity"
            android:exported="false"
            android:label="Submit Report"
            android:theme="@style/Theme.SeriousMode" />

        <activity
            android:name="Activity.NextActivity"
            android:exported="false"
            android:label="@string/title_activity_next"
            android:theme="@style/Theme.SeriousMode" />

        <activity
            android:name="Activity.ReportDetailActivity"
            android:exported="false"
            android:label="Report Details"
            android:theme="@style/Theme.SeriousMode" />

        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Register"
            android:theme="@style/Theme.SeriousMode" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
