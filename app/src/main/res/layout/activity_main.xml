<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- HEADER: Logo + Title + Subtitle above the card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#FFF8F9FF"
            android:paddingBottom="8dp"
            android:paddingTop="32dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_school_logo"
                android:layout_gravity="center"
                android:contentDescription="PUP Logo"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUP ParaÃ±aque Campus"
                android:textSize="22sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report And Monitoring System"
                android:textSize="15sp"
                android:textColor="#616161"
                android:gravity="center"/>
        </LinearLayout>

        <!-- FLOATING LOGIN BOX -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="10dp"
            android:background="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in to submit and monitor campus reports"
                    android:textSize="12sp"
                    android:textColor="#616161"
                    android:paddingBottom="12dp" />

                <!-- RadioGroup for Student/Admin selection -->
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="14dp">

                    <RadioButton
                        android:id="@+id/radioStudent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Student"
                        android:checked="true"
                        android:buttonTint="#D32F2F"/>

                    <RadioButton
                        android:id="@+id/radioAdmin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin"
                        android:buttonTint="#D32F2F"/>
                </RadioGroup>

                <!-- Email field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address"
                    android:layout_marginTop="10dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password field with eye toggle -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:endIconMode="password_toggle"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/buttonSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign In as Student"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"/>

                <!-- Demo Credentials -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF3E0"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginTop="12dp"
                    android:elevation="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Demo credentials:"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:\njonerickjamesvimperial@iskolamgbayan.pup.edu.ph"
                        android:textColor="#7B1FA2"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password: dikoalam@2"
                        android:textColor="#7B1FA2"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Use your PUP email and password to sign in"
                    android:textColor="#888"
                    android:textSize="12sp"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For assistance, contact the IT Department at Building A"
            android:textSize="12sp"
            android:textColor="#616161"
            android:gravity="center"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
